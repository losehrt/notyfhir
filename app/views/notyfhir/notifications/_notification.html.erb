<%= turbo_frame_tag notification do %>
  <div class="border rounded-lg p-4 <%= notification.unread? ? 'bg-blue-50 border-blue-200' : 'bg-white' %> hover:shadow-md transition-shadow">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <%= link_to notification_path(notification), class: "block" do %>
          <h3 class="font-semibold text-lg <%= notification.unread? ? 'text-blue-900' : 'text-gray-900' %>">
            <%= notification.title %>
          </h3>
          <p class="text-gray-600 mt-1"><%= notification.body %></p>
          <p class="text-sm text-gray-500 mt-2">
            <%= notification.created_at.strftime("%Y年%m月%d日 %H:%M") %>
          </p>
        <% end %>
      </div>
      
      <% if notification.unread? %>
        <div class="ml-4">
          <%= button_to "標記已讀", mark_as_read_notification_path(notification),
              method: :post,
              class: "text-sm text-blue-600 hover:text-blue-800",
              data: { turbo_method: :post } %>
        </div>
      <% else %>
        <span class="text-sm text-gray-400 ml-4">已讀</span>
      <% end %>
    </div>
  </div>
<% end %>