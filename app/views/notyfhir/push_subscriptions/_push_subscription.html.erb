<li class="flex items-center justify-between p-3 bg-gray-50 rounded">
  <div>
    <span class="font-medium"><%= push_subscription.device_name %></span>
    <span class="text-sm text-gray-500 ml-2">
      (註冊於 <%= push_subscription.created_at.strftime("%Y-%m-%d %H:%M") %>)
    </span>
  </div>
  <%= button_to "移除", push_subscriptions_path,
      method: :delete,
      params: { endpoint: push_subscription.endpoint },
      class: "text-red-600 hover:text-red-800 text-sm",
      data: { 
        turbo_method: :delete,
        turbo_confirm: "確定要移除這個裝置嗎？"
      } %>
</li>